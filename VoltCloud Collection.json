				{
					"name": "Application Management",
					"item": [
						{
							"name": "list applications",
							"event": [
								{
									"listen": "test",
									"script": {
										"exec": [
											"if (pm.response.code === 200) {",
											"  let ApplicationList = pm.response.json()",
											"",
											"  for (let i = 0, l = ApplicationList.length; i < l; i++) {",
											"    let ApplicationInfo = ApplicationList[i]",
											"    if (ApplicationInfo.subdomain.startsWith('postman-')) {",
											"      pm.collectionVariables.set('application_url', ApplicationInfo.url)",
											"      pm.collectionVariables.set('application_id',  ApplicationInfo.id)",
											"      return",
											"    }",
											"  }",
											"",
											"  pm.collectionVariables.set('application_url', '')",
											"  pm.collectionVariables.set('application_id',  '')",
											"}",
											""
										],
										"type": "text/javascript"
									}
								}
							],
							"request": {
								"auth": {
									"type": "bearer",
									"bearer": [
