					"name": "Customer Management (Application-specific)",
					"item": [
						{
							"name": "list customers",
							"event": [
								{
									"listen": "test",
									"script": {
										"exec": [
											"if (pm.response.code === 200) {",
											"  let CustomerEMailAddress = pm.collectionVariables.get('customer_email_address') || ''",
											"",
											"  let CustomerList = pm.response.json()",
											"  if ((CustomerList.length > 0) && (CustomerEMailAddress !== '')) {",
											"    for (let i = 0, l = CustomerList.length; i < l; i++) {",
											"      if (CustomerList[i].email === CustomerEMailAddress) {",
											"        pm.collectionVariables.set('customer_id', CustomerList[i].id)",
											"        return",
											"      }",
											"    }",
											"",
											"    pm.collectionVariables.set('customer_id',            CustomerList[0].id)",
											"    pm.collectionVariables.set('customer_email_address', CustomerList[0].email)",
											"  }",
											"}",
											""
										],
										"type": "text/javascript"
									}
								}
							],
