					"item": [
						{
							"name": "login developer",
							"event": [
								{
									"listen": "test",
									"script": {
										"exec": [
											"if (pm.response.code === 200) {",
											"  let Response = pm.response.json()",
											"",
											"  pm.collectionVariables.set('developer_access_token', Response.access_token)",
											"  pm.collectionVariables.set('developer_id',           Response.user_id)",
											"}",
											""
										],
										"type": "text/javascript"
									}
								}
							],
							"request": {
								"auth": {
									"type": "noauth"
								},
								"method": "POST",
								"header": [],
								"body": {
									"mode": "raw",
									"raw": "{\n  \"grant_type\": \"password\",\n  \"username\": \"{{developer_email_address}}\",\n  \"password\": \"{{developer_password}}\",\n  \"scope\": \"RpYCMN\"\n}",
									"options": {
										"raw": {
											"language": "json"
										}
									}
								},
								"url": {
									"raw": "{{dashboard_url}}/api/auth/login",
